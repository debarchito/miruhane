{
  "name": "miruhane",
  "version": "0.1.0",
  "description": "Dynamic AI-driven conversations with seemless voice integration and personalized experiences.",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:gen": "drizzle-kit generate --config drizzle.config.ts",
    "db:push": "drizzle-kit push --config drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config drizzle.config.ts",
    "comp:add": "pnpm dlx shadcn-svelte@next add"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.4",
    "@sveltejs/adapter-node": "^5.2.11",
    "@sveltejs/kit": "^2.15.1",
    "@sveltejs/vite-plugin-svelte": "^4.0.4",
    "@types/node": "^22.10.5",
    "autoprefixer": "^10.4.20",
    "bits-ui": "1.0.0-next.77",
    "clsx": "^2.1.1",
    "drizzle-kit": "^0.22.8",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.46.1",
    "globals": "^15.14.0",
    "lucide-svelte": "^0.469.0",
    "mode-watcher": "^0.5.0",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "svelte": "^5.16.1",
    "svelte-check": "^4.1.1",
    "sveltekit-superforms": "^2.22.1",
    "tailwind-merge": "^2.6.0",
    "tailwind-variants": "^0.3.0",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.0",
    "vite": "^5.4.11",
    "zod": "^3.24.1"
  },
  "dependencies": {
    "@node-rs/argon2": "^1.8.3",
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "argon2": "^0.41.1",
    "drizzle-orm": "^0.33.0",
    "postgres": "^3.4.5"
  }
}
